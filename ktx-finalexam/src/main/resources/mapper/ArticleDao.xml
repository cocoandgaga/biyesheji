<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd">

<mapper namespace="com.zxj.finalexam.dao.ArticleDao">

	<!-- 可根据自己的需求，是否要使用 -->
    <resultMap type="com.zxj.finalexam.entity.ArticleEntity" id="ArticleMap">
        <result property="id" column="ID"/>
        <result property="imageUrl" column="IMAGE_URL"/>
        <result property="description" column="DESCRIPTION"/>
        <result property="gmtCreate" column="GMT_CREATE"/>
        <result property="gmtModified" column="GMT_MODIFIED"/>
        <result property="creator" column="CREATOR"/>
        <result property="viewCnt" column="VIEW_CNT"/>
        <result property="likeCnt" column="LIKE_CNT"/>
        <result property="commentCnt" column="COMMENT_CNT"/>
        <result property="title" column="TITLE"/>
        <result property="deptId" column="DEPT_ID"/>
        <result property="tag" column="TAG"/>
        <result property="context" column="CONTEXT"/>
        <result property="author" column="AUTHOR"/>
    </resultMap>
    <update id="updateViewCnt" parameterType="com.zxj.finalexam.entity.ArticleEntity">
        update ARTICLE
        SET
        VIEW_CNT=VIEW_CNT + #{viewCnt,jdbcType=BIGINT}
        where ID=#{id}
    </update>

    <update id="updateLikeCnt" parameterType="com.zxj.finalexam.entity.ArticleEntity">
        update ARTICLE
        SET
        LIKE_CNT=LIKE_CNT + #{likeCnt}
        where ID=#{id}
    </update>

    <update id="updateCommentCnt" parameterType="com.zxj.finalexam.entity.ArticleEntity">
        update ARTICLE
        SET
        COMMENT_CNT=COMMENT_CNT + #{commentCnt}
        where ID=#{id}
    </update>
</mapper>